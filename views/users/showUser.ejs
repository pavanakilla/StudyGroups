<% include ../partials/header %>

    <div class="container">
        <div class="row" style="margin-bottom: 20px;">
            <div class="col-md-2">
                <a href="/groups/groups/<%= user.group.id %>" class="btn btn-large btn-info btn-block"><i class="step backward icon"></i> Go Back</a>
            </div>
            <div class="col-md-2">
                <h2><i class="user icon"></i> <%= user.username %></h2>
            </div>
        </div>
        <div class="row" style="margin-top: 10px;">
            <div class="col-md-12" style="margin-bottom: 10px; margin-top: 10px;">
                <h3 class="lead">Statistics</h3>
            </div>
            <div class="col-md-6" style="margin-bottom: 5px;">
                <p>Questions</p>
                <hr class="surround">
            </div>
            <div class="col-md-6" style="margin-bottom: 5px;">
                <p>Answers</p>
                <hr class="surround">
            </div>
            <div class="col-md-2">
                <p>Asked (<%= user.questions %>)</p>
            </div>
            <div class="col-md-4">
				<div class="progress">
					<div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="<%= user.questions %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= user.questions %>%;">
				  	</div>
				</div>
			</div>
			<div class="col-md-2">
			    <p>Given (<%= user.answers %>)</p>
			</div>
            <div class="col-md-4">
				<div class="progress">
					<div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="<%= user.answers %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= user.answers %>%;">
				  	</div>
				</div>
			</div>
			<div class="col-md-2">
                <p>Likes (<%= user.questionLikes %>)</p>
            </div>
            <div class="col-md-4">
				<div class="progress">
					<div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="<%= user.questionLikes %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= user.questionLikes %>%;">
				  	</div>
				</div>
			</div>
			<div class="col-md-2">
			    <p>Likes (<%= user.answerLikes %>)</p>
			</div>
            <div class="col-md-4">
				<div class="progress">
					<div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="<%= user.answerLikes %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= user.answerLikes %>%;">
				  	</div>
				</div>
			</div>
			<div class="col-md-2">
                <p>Teacher Points (<%= user.questionTeacherPoints %>)</p>
            </div>
            <div class="col-md-4">
				<div class="progress">
					<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="<%= user.questionTeacherPoints %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= user.questionTeacherPoints %>%;">
				  	</div>
				</div>
			</div>
			<div class="col-md-2">
			    <p>Teacher Points (<%= user.answerTeacherPoints %>)</p>
			</div>
            <div class="col-md-4">
				<div class="progress">
					<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="<%= user.answerTeacherPoints %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= user.answerTeacherPoints %>%;">
				  	</div>
				</div>
			</div>
        </div>
    </div>
    
<% include ../partials/footer %>