<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit Answer</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/questions/questions/<%= question_id %>/answers/<%= answer._id %>/?_method=PUT" method="POST">
                    <div class="form-group">
                         <textarea class="form-control" name="answer[text]" 
                         style="resize:none; min-height:100px;" required><%= answer.text %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Update Answer</button>
                    </div>
                </form>
                <a href="/questions/questions/<%= question_id %>">Go Back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>