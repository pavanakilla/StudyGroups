<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit Question</h1>
            <div style="width: 40%; margin: 25px auto;">
                <form action="/questions/questions/<%= question._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                         <textarea class="form-control" name="question[title]" 
                         style="resize:none; min-height:100px;" required><%= question.title %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Update Question</button>
                    </div>
                </form>
                <a href="/questions/questions">Go Back</a>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>