<% include ../partials/header %>

    <div class="container">
        
        <div class="btn btn-group" style="display: inline-block;">
            <a href="/questions/questions" class="btn btn-large btn-info">Go Back</a>
            <a href="/questions/questions/<%= question._id %>/editQuestion" class="btn btn-large btn-warning">Edit Question</a>
            <form action="/questions/questions/<%= question._id %>?_method=DELETE" method="POST">
                <div class="form-group">
                    <button class="btn btn-large btn-danger">Delete Question</button>
                </div>
            </form>
        </div>
        
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <div class="col-md-12 btn btn-primary">
                <div class="col-md-8"><%= question.title %> - Created: <%= question.created %></div>
                <div class="col-md-1"><a href="#" class="btn btn-info">Author</a></div>
                <div class="col-md-2">
                    <button class="btn btn-success" type="button">Teacher Point <span class="badge"><%= question.teacherPoints %></span>
                    </button>
                </div>
                <div class="col-md-1">
                    <button class="btn btn-danger" type="button">Likes <span class="badge"><%= question.likes %></span>
                    </button>
                </div>
            </div>
            <% if (question.answers.length>0) {%>
                <% question.answers.forEach(function (answer) {%>
                    <div class="col-md-12 btn btn-warning" style="margin:1px auto;">
                        <div class="col-md-8"><%= answer.text %></div>
                            <div class="col-md-1"><a href="#" class="btn btn-info">Author</a></div>
                        <div class="col-md-2">
                            <button class="btn btn-success" type="button">Teacher Point <span class="badge"><%= answer.teacherPoints %></span>
                            </button>
                        </div>
                        <div class="col-md-1">
                            <button class="btn btn-danger" type="button">Likes <span class="badge"><%= answer.likes %></span>
                            </button>
                        </div>
                    </div>
                <% }); %>
            <% } %>
            <div class="col-md-12" style="margin:20px auto;">
                <form action="/questions/questions/<%= question._id %>/answers" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="answer[text]" placeholder="Submit Answer" style="resize:none;" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary">Submit Answer</button>
                </div>
            </form>
            </div>
        </div>
        
    </div>
    
<% include ../partials/footer %>