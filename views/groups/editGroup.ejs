<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit Group</h1>
            <div style="width: 40%; margin: 25px auto;">
                <form action="/groups/groups/<%= group._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                         <input class="form-control" type="text" name="group[name]" value="<%= group.name %>" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Update Group</button>
                    </div>
                </form>
                <a href="/groups/groups/<%= group._id %>">Go Back</a>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>